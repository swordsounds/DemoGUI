<UserControl x:Class="DisplayAnOfflineMapOnDemand.Controls.dropDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DisplayAnOfflineMapOnDemand.Controls"
             xmlns:behaviors="clr-namespace:DisplayAnOfflineMapOnDemand.Behaviors"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border BorderBrush="#1C1D21"
                Background="#1C1D21"
                CornerRadius="8">
            <Grid Background="Transparent"
                  ShowGridLines="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding Title, ElementName=root}"
                           Foreground="White"
                           Grid.Column="0"
                           Grid.ColumnSpan="15"
                           Grid.RowSpan="15"/>
                <Button Content="\/" 
                        Grid.Column="7"
                        Grid.Row="12"
                        Grid.ColumnSpan="1"
                        Grid.RowSpan="3"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="White"
                        Padding="0,0,0,0"/>


                <ScrollViewer Grid.Column="1"
                              Grid.Row="3"
                              Grid.ColumnSpan="13"
                              Grid.RowSpan="9"
                              Background="Transparent"
                              Panel.ZIndex="1">
                    <StackPanel>
                        <Border BorderBrush="#09090B"
                        BorderThickness="1"
                        Background="#09090B"
                        CornerRadius="8"
                        Grid.Column="1"
                        Grid.Row="3"
                        Grid.ColumnSpan="4"
                        Grid.RowSpan="3"
                        Margin="10">

                            <TextBox BorderThickness="0"
                             BorderBrush="#09090B"
                             Background="Transparent"
                             Foreground="White"
                             CaretBrush="White"
                             Margin="5,2,0,0"
                             Padding="5"/>
                        </Border>
                        <Border BorderBrush="#09090B"
                                BorderThickness="1"
                                Background="#09090B"
                                CornerRadius="8"
                                Grid.Column="1"
                                Grid.Row="3"
                                Grid.ColumnSpan="4"
                                Grid.RowSpan="3"
                                Margin="10">
                            <TextBox BorderThickness="0"
                             BorderBrush="#09090B"
                             Background="Transparent"
                             Foreground="White"
                             CaretBrush="White"
                             Margin="5,2,0,0"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
                
            </Grid>
        </Border>
    </Grid>
</UserControl>
